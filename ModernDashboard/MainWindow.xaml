<Window x:Class="ModernDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ModernDashboard.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="580" 
        Width="930"
        x:Name="DashboardWindow"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    
    <!--// <Summary>
    // View - ["The Display"]
    // View is the XAML based user interface. The view interacts with
    // the view model through data binding, commands, and change
    // notification events.
    // </Summary>-->
    
    <!--Setting the DataContext (Binding Source)-->
    <Window.DataContext>
        <vm:NavigataionViewModel/>
    </Window.DataContext>
    
    <Grid>

        <!--Background Border-->
        <Border Background="#ECF0F1"
                CornerRadius="10"/>
        
        <!--Header-->
        <Border Background="#5C5C5C"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                CornerRadius="10,0,100,0"
                Height="80"
                Width="850">
            <TextBlock Text="C # D E S I G N  P R O"
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!--Footer-->
        <Border Background="#5C5C5C"
         VerticalAlignment="Top"
         HorizontalAlignment="Left"
         CornerRadius="10,0,100,0"
         Height="80"
         Width="850">
            <TextBlock Text="C # D E S I G N  T H E  I N T E R F A C E"
                Style="{StaticResource FooterStyle}"/>
        </Border>

        <!--Content Background-->
        <Border Background="#303030"
                BorderBrush="#FFFFFF"
                BorderThickness="0,5,0,5"
                Height="480"
                Margin="0,10,0,0"
                CornerRadius="25">
            
        </Border>
    </Grid>
</Window>
